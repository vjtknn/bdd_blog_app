%header{role: "banner"}
  .navbar.navbar-light.navbar-expand-lg.bg-light.navbar-fixed-top{role: "navigation"}
    .navbar-header
      = link_to "Blog App", root_path, class: "navbar-brand"
      %buttnon{type:"button", class: 'navbar-toggler',
      'data-toggle': 'collapse', 'data-target': "#navbarNav",
      'aria-controls': 'navbarNav', 'aria-expanded': 'false',
      'aria-label': 'Toggle navigation'}
        %span{class: 'navbar-toggler-icon'}
        %span{class: 'icon-bar'}
        %span{class: 'icon-bar'}

    .navbar-collapse.collapse{id: 'navbarNav'}
      %ul{class: 'nav navbar-nav'}
        %li{class: 'navbar-item active'}
          = link_to "Authors", "#", class: 'nav-link'
        %li
          =link_to "Sign up", new_user_registration_path, class: 'btn btn-outline-primary'
        %li
        = link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" 
