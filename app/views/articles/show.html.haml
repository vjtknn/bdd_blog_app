%h1
  =@article.title
%p
  =@article.body
=fa_icon "calendar", text: "#{@article.created_at.strftime("%b %d %Y")}"
%div
  = link_to "Edit", edit_article_path(@article), class: "btn btn-outline-primary"
  = link_to "Delete", article_path(@article), method: :delete,
    class: "btn btn-outline-danger", data: {confirm: "Are you sure you want to delete this article?"}
