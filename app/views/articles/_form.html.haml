.row
  .col-md-12
    =form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f|
      - if @article.errors.any?
        .card.col-offset-md-1.alert-danger
          .card-header
            %h4.card-title.text-light
              =pluralize(@article.errors.count, "error")
              prohibited this article from being saved:
          .card-body
            %ul
              -@article.errors.full_messages.each do |msg|
                %li.text-danger
                  =msg
      .form-group
        .control-label.col-md-1
          =f.label :title
        .col-md-11
          =f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true
        .control-label.col-md-1
          =f.label :body
        .col-md-11
          =f.text_area :body,rows: 10, class: "form-control", placeholder: "Body of article"
        .col-md-offset-1.col-md-11
          =f.submit class: 'btn btn-primary btn-lg float-right'
